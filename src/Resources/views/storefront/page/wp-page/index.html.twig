{% set page = elementData.page %}
{% block base_content %}
    <div class="wp-page">
        {% if page %}
            <div class="row wp-content">
                <div class="col-md-12 py-3">
                    <div class="wp-h1">{{ page.title|raw }}</div>	
                    <div class="font-weight-bold">
                        {% if page.authorName %}
                            <span>{{ "hatslogicWPIntegration.general.written_by"|trans|sw_sanitize }} {{ page.authorName }}</span> 
                        {% endif %}
                        <span>{{ "hatslogicWPIntegration.general.on"|trans|sw_sanitize }} {{ page.date|date('M d, Y') }}</span>
                    </div>	
                </div>
                <div class="col-md-12 py-3">
                    {% if config('HatslogicWpIntegration.config.enableWordpressFeaturedImage') && page.image %}
                        <div class="wp-post-featured-image">
                            <img src="{{ page.image }}" alt="{{ page.image_alt }}" class="img-fluid">
                        </div>
                    {% endif %}
                    <p>{{ page.content|raw }}</p>
                </div>
            </div>
        {% else %}
            <div class="row">
                <div class="col-md-12 d-flex align-items-center justify-content-center py-5">
                    <div class="text-center">
                        <img src="{{ asset('/bundles/hatslogicwpintegration/static/cms/no_result_found.png') }}" class="img-fluid">
                        <div class="wp-h4">{{ "hatslogicWPIntegration.general.404_found"|trans|sw_sanitize }}</div>
                    </div>
                </div>
            </div>
        {% endif %}
    </div>
{% endblock %}